{
  "dashboard": {
    "id": null,
    "title": "Multi-Cloud Security & Compliance Dashboard",
    "tags": ["security", "compliance", "multi-cloud", "policies"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "1m",
    "schemaVersion": 30,
    "version": 1,
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Security Policy Violations",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 0},
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center"
        },
        "targets": [
          {
            "expr": "sum(increase(gatekeeper_violations_total[1h]))",
            "legendFormat": "Policy Violations",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Network Policies Status",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 0},
        "options": {
          "colorMode": "background",
          "graphMode": "none"
        },
        "targets": [
          {
            "expr": "count(kube_networkpolicy_created)",
            "legendFormat": "Active Network Policies",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "green", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Pod Security Standards Compliance",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 0},
        "options": {
          "colorMode": "background",
          "graphMode": "none"
        },
        "targets": [
          {
            "expr": "100 * (count(kube_pod_info{created_by_kind!=\"Job\"}) - count(kube_pod_info{created_by_kind!=\"Job\"} * on(pod, namespace) kube_pod_spec_volumes_persistentvolumeclaim_readonly == 0)) / count(kube_pod_info{created_by_kind!=\"Job\"})",
            "legendFormat": "PSS Compliance %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Failed Authentication Attempts",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {
            "displayMode": "table",
            "placement": "bottom"
          }
        },
        "targets": [
          {
            "expr": "sum by (cluster, verb, objectRef_resource) (rate(apiserver_audit_total{verb!=\"get\",verb!=\"list\",verb!=\"watch\",objectRef_resource!=\"\"}[5m]))",
            "legendFormat": "{{cluster}} - {{verb}} {{objectRef_resource}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps"
          }
        }
      },
      {
        "id": 5,
        "title": "Vulnerability Scan Results",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "options": {
          "showHeader": true
        },
        "targets": [
          {
            "expr": "count by (severity, image) (vulnerability_scan_results)",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "renameByName": {
                "image": "Container Image",
                "severity": "Severity",
                "Value": "Count"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            }
          }
        }
      },
      {
        "id": 6,
        "title": "RBAC Policy Overview",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "options": {
          "pieType": "donut",
          "tooltip": {"mode": "single"},
          "legend": {
            "displayMode": "visible",
            "placement": "right"
          }
        },
        "targets": [
          {
            "expr": "count by (kind) (kube_role_info)",
            "legendFormat": "{{kind}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Certificate Expiry Status",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "options": {
          "showHeader": true
        },
        "targets": [
          {
            "expr": "cert_exporter_cert_expires_in_seconds / 86400",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "cert_name": "Certificate",
                "Value": "Days Until Expiry"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "days",
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 30},
                {"color": "green", "value": 90}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Cross-Cloud Network Traffic",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 22},
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {
            "displayMode": "table",
            "placement": "bottom"
          }
        },
        "targets": [
          {
            "expr": "sum by (source_cloud, destination_cloud) (rate(istio_request_total[5m]))",
            "legendFormat": "{{source_cloud}} â†’ {{destination_cloud}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps"
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "cluster",
          "type": "query",
          "query": "label_values(up{job=\"kubernetes-apiservers\"}, cluster)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(kube_namespace_labels, namespace)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Security Alerts",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\".*Security.*|.*Policy.*\"}",
          "iconColor": "red",
          "titleFormat": "{{alertname}}",
          "textFormat": "{{instance}}: {{description}}"
        }
      ]
    }
  }
}