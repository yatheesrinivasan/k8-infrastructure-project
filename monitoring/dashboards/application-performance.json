{
  "dashboard": {
    "id": null,
    "title": "Application Performance Monitoring (APM)",
    "tags": ["apm", "performance", "microservices", "jaeger"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Request Rate by Service",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "values": ["value", "max"]
          }
        },
        "targets": [
          {
            "expr": "sum by (service_name) (rate(jaeger_spans_total{span_kind=\"server\"}[5m]))",
            "legendFormat": "{{service_name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Average Response Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {
            "displayMode": "table",
            "placement": "bottom"
          }
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (service_name, le) (rate(jaeger_span_duration_seconds_bucket{span_kind=\"server\"}[5m])))",
            "legendFormat": "95th percentile - {{service_name}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum by (service_name, le) (rate(jaeger_span_duration_seconds_bucket{span_kind=\"server\"}[5m])))",
            "legendFormat": "50th percentile - {{service_name}}",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "s"
          }
        }
      },
      {
        "id": 3,
        "title": "Error Rate by Service",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {
            "displayMode": "table",
            "placement": "bottom"
          }
        },
        "targets": [
          {
            "expr": "sum by (service_name) (rate(jaeger_spans_total{span_kind=\"server\",status_code!=\"OK\"}[5m])) / sum by (service_name) (rate(jaeger_spans_total{span_kind=\"server\"}[5m])) * 100",
            "legendFormat": "Error Rate - {{service_name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "HTTP Status Code Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "options": {
          "pieType": "pie",
          "tooltip": {"mode": "single"},
          "legend": {
            "displayMode": "visible",
            "placement": "right"
          }
        },
        "targets": [
          {
            "expr": "sum by (http_status_code) (increase(http_requests_total[1h]))",
            "legendFormat": "{{http_status_code}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Database Query Performance",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {
            "displayMode": "table",
            "placement": "bottom"
          }
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (database, le) (rate(mysql_query_duration_seconds_bucket[5m])))",
            "legendFormat": "95th percentile - {{database}}",
            "refId": "A"
          },
          {
            "expr": "sum by (database) (rate(mysql_queries_total[5m]))",
            "legendFormat": "Query Rate - {{database}}",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Service Dependencies Map",
        "type": "nodeGraph",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 24},
        "options": {
          "nodes": {
            "mainStatUnit": "short",
            "secondaryStatUnit": "short",
            "arcs": [
              {
                "field": "success_rate",
                "color": "green"
              },
              {
                "field": "error_rate", 
                "color": "red"
              }
            ]
          }
        },
        "targets": [
          {
            "expr": "sum by (source_service, target_service) (rate(jaeger_spans_total{span_kind=\"client\"}[5m]))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(jaeger_spans_total, service_name)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "operation",
          "type": "query",
          "query": "label_values(jaeger_spans_total{service_name=\"$service\"}, operation_name)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    }
  }
}