{
  "dashboard": {
    "id": null,
    "title": "Multi-Cloud Kubernetes Cluster Overview",
    "tags": ["kubernetes", "multi-cloud", "overview"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "panels": [
      {
        "id": 1,
        "title": "Cluster Status Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center"
        },
        "targets": [
          {
            "expr": "up{job=\"kubernetes-nodes\"}",
            "legendFormat": "Nodes Up",
            "refId": "A"
          },
          {
            "expr": "kube_pod_status_ready{condition=\"true\"}",
            "legendFormat": "Pods Ready",
            "refId": "B"
          },
          {
            "expr": "kube_deployment_status_replicas_available",
            "legendFormat": "Deployments Available",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.8},
                {"color": "green", "value": 0.9}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Multi-Cloud Resource Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "pie",
          "tooltip": {"mode": "single"},
          "legend": {
            "displayMode": "visible",
            "placement": "right",
            "values": ["value", "percent"]
          }
        },
        "targets": [
          {
            "expr": "count by (cloud_provider) (up{job=\"kubernetes-nodes\"})",
            "legendFormat": "{{cloud_provider}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Node Resource Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "values": ["value", "max", "min"]
          }
        },
        "targets": [
          {
            "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage - {{instance}}",
            "refId": "A"
          },
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "Memory Usage - {{instance}}",
            "refId": "B"
          },
          {
            "expr": "100 - ((node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"}) * 100)",
            "legendFormat": "Disk Usage - {{instance}}",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Pod Status Across Clusters",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "options": {
          "showHeader": true
        },
        "targets": [
          {
            "expr": "count by (namespace, phase, cloud_provider) (kube_pod_status_phase)",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "indexByName": {},
              "renameByName": {
                "cloud_provider": "Cloud Provider",
                "namespace": "Namespace",
                "phase": "Phase",
                "Value": "Count"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Network Traffic by Cloud Provider",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {
            "displayMode": "table",
            "placement": "bottom"
          }
        },
        "targets": [
          {
            "expr": "sum by (cloud_provider) (rate(container_network_receive_bytes_total[5m]))",
            "legendFormat": "Inbound - {{cloud_provider}}",
            "refId": "A"
          },
          {
            "expr": "sum by (cloud_provider) (rate(container_network_transmit_bytes_total[5m]))",
            "legendFormat": "Outbound - {{cloud_provider}}",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "binBps"
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "cluster",
          "type": "query",
          "query": "label_values(up{job=\"kubernetes-nodes\"}, cluster)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "cloud_provider",
          "type": "query",
          "query": "label_values(up{job=\"kubernetes-nodes\"}, cloud_provider)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(kube_pod_info, namespace)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=\"DeploymentReplicasMismatch\"}",
          "iconColor": "red",
          "titleFormat": "{{alertname}}",
          "textFormat": "{{instance}}: {{description}}"
        }
      ]
    }
  }
}